<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".SignUpActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/box_color"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.516"

        app:layout_constraintWidth_percent="0.85">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"

            android:fontFamily="@font/jalnan"
            android:text="sign up"
            android:textColor="@color/black"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.13"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.3" >

        </TextView>

        <TextView
            android:id="@+id/signup_name_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:text="이름"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.119"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.09">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.077"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_name_text"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.79">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_name_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:background="@drawable/login_edit_text"


                android:hint="이름을 입력하세요"

                app:layout_constraintHeight_percent="1"
                app:layout_constraintWidth_percent="1">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/signup_gender_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:text="성별"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.119"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.417"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.09">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.077"
            app:layout_constraintHorizontal_bias="0.16"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_gender_text"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.35">

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gender"
                android:prompt="@string/promt_gender"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/signup_age_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:text="나이"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.56"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.417"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.09">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.077"
            app:layout_constraintHorizontal_bias="0.78"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_gender_text"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.35">

            <Spinner
                android:id="@+id/spinner_age"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/age"
                android:prompt="@string/promt_age" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/signup_phoneNum_editText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:text="전화번호"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.119"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.174">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.077"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_phoneNum_text"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.79">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_email_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:background="@drawable/login_edit_text"


                android:hint="E-mail을 입력하세요"

                app:layout_constraintHeight_percent="1"
                app:layout_constraintWidth_percent="1">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/signup_email_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:text="E-mail"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.119"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.79"

            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.139">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.077"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_email_text"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.79">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_email_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoSizeTextType="uniform"
                android:background="@drawable/login_edit_text"


                android:hint="E-mail을 입력하세요"

                app:layout_constraintHeight_percent="1"
                app:layout_constraintWidth_percent="1">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_button"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_margin="0dp"


        android:background="@drawable/signup_button"

        android:elevation="10dp"
        android:text="Continue"
        android:textSize="20dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.547"
        app:layout_constraintWidth_percent="0.39">

    </androidx.appcompat.widget.AppCompatButton>

    <ImageView
        android:id="@+id/login_page_logoImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"

        android:src="@drawable/logo_icon"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.31" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_button">

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>