<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPageActivity"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/startPageLogoImageView"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_icon"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.63" />

    <TextView
        android:id="@+id/startPageLogoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:shadowColor="@color/text_shadow_color"
        android:shadowDy="4.0"
        android:shadowRadius="4"
        android:textSize="30sp"
        android:text="열 걸음 가까이"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startPageLogoImageView"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>